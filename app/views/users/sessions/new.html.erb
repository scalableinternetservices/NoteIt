<% provide(:title, "Onwards") %>

<body>
  <div style="padding-top: 100px; 
    height: 100%;
    text-align: center;
    
  color:black;" >
      <!-- <form class="form-signin"> -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-control") do |f| %>
        <h2 class="form-signin-heading">Sign in</h2>
        <br>
        <div class="email">
          <%= f.label :email %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
          <%= f.email_field :email, autofocus: true, :class => 'signupbutton' %>
        </div>
        <br>
        <div class="password">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", :class => 'signupbutton' %>
        </div>
        <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me, :class => 'signupbutton' %><%= f.label :remember_me %>
          </label>
        </div>
        <% end %>
        <br>
        <br>
        <!--<button class="btn btn-lg btn-primary btn-block" type="submit" style="width: 20%; margin-left: 40%">Sign in</button>-->
        <%= f.submit "Log in", :class => 'btn btn-lg btn-primary btn-block', :style => 'width:20%; margin-left:40%' %>
        <br>
      <br>
      <br>
      <% end %>

      <tr><td colspan="2"><%= render "devise/shared/links" %></td></tr></table>

    </div>


</body>
