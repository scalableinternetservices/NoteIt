<body>
  <div class="loginback">
      <!-- <form class="form-signin"> -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-control") do |f| %>
        <h2 class="form-signin-heading">Sign in</h2>
        <br>
        <div class="email">
          <%= f.label :email %>&nbsp&nbsp&nbsp
          <%= f.email_field :email, autofocus: true, :class => 'signupbutton' %>
        </div>
        <br>
        <div class="password">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", :class => 'signupbutton' %>
        </div>

        <!-- <label for="inputEmail" class="sr-only" style:"margin-left:20%; color:white">Email</label>
