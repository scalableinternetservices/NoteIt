        <meta charset="utf-8">
        <title>textAngular :: Lightweight Angular.js, Javascript Wysiwyg/Text-Editor</title>
        <link rel="shortcut icon" href="images/favicon.png">
        <script src='http://code.jquery.com/jquery-1.9.1.min.js'></script>

        <%= javascript_include_tag "textAngular-rangy.min", "textAngular-sanitize.min", "textAngular.min", "bootstrap-tags" %>
        <%= stylesheet_link_tag "bootstrap-tags" %>
        <!-- <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,300"> -->
    <link rel="stylesheet" href="http://textangular.com/css/style.css" type="text/css">
    </head>

    <body>
            <div id="note_save_msg" style="display: none;"></div>
            <div id="ng-app" ng-app="textAngularDemo" ng-controller="demoController" class="ng-scope">
                <br>
                
                

                <br>
                <!--note title-->
<table style="border-spacing:20px 20px;" cellspacing="30px">
                <div class="form-group">
                   <tr><td> <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold; font-size:17px">Title:</label></td><td> 
                    <input class="form-control" type="text" ng-model="title" style="width: 500px"></td></tr>
                </div>
                

                <!--note uni-->
                <div class="form-group">
                <tr><td> <br/>   <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold; font-size:17px">University:</label></td><td> <br/>  
                    <input class="form-control" type="text" ng-model="university" style="width: 250px"></td></tr>
                </div>

                <!--note class-->
                <div class="form-group">
                   <tr><td> <br/> <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold; font-size:17px">Class:</label></td><td><br/> 
                    <input class="form-control" type="text" ng-model="notes_class" style="width: 250px"></td></tr>
                </div>

                <!--note prof-->
                <div class="form-group">
                   <tr><td><br/>  <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold; font-size:17px">Professor:</label></td><td><br/> 
                    <input class="form-control" type="text" ng-model="professor" style="width: 250px"></td></tr>
                </div>
                
                <div class="form-group">
                   <tr><td> <br/> <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold; font-size:17px">Notebook: </label></td><td><br/> 
                    <select class="form-control" id="notebook_id" style="width:200px">
                        <%@notebooks.each do |option|%>
                        <option value="#{option.id}"><%=option.title%></option>
                        <%end%>
                    </select>  </td></tr>
                </div>
</table>
                <br/>
                <!--note tags-->
                <!--<p class="col-sm-1 control-label" style="margin-left:50px; font-weight: bold;">Tags: </p>
                <div id="tags" style="margin-left: 150px; width: 500px"></div>
    <!--             <div class="form-group">
                    <label class="col-sm-1 control-label" style="margin-left: 50px; font-weight: bold;">Tags:</label>
                    <input class="form-control" type="text" ng-model="tags" style="width: 500px">
                </div> -->

                <br>

                <!--Angular Text Editor-->
                    <div text-angular ng-model="htmlContent" name="demo-editor" ta-text-editor-class="border-around" ta-html-editor-class="border-around"></div>
                <br>

                <!--<p ng-bind="htmlContent" class="text-left text-med text-gray"></p>-->


                <!--Save Button-->
                <button class="btn btn-success" ng-click="save()"
                        style=" background-color: white; border-color: black; width: 120px; color:black; font-weight: bold;
                        margin-top: 20px; float: right; margin-right: 50px">
                    <!-- <span class="glyphicon glyphicon-save"></span>&nbsp&nbsp Save &nbsp&nbsp -->
                    <span>Save</span>
                </button>
                <br>
                <br>
            </div>
        <!-- End Container -->

    </body>

    <script type="text/javascript">
