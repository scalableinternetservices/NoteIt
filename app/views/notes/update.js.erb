<%if @vote_type == :upvote%>
	$("#upvote_form_form").css("color", "green");
	$("#downvote_form_form").css("color", "black");
	$("#upvote_count").html('<%=@note.get_upvotes.size%>');
	<%if(@note.get_downvotes.size != 0)%>
		$("#downvote_count").html('<%=-@note.get_downvotes.size%>');	
	<%else%>
		$("#downvote_count").html('0');	
	<%end%>
	
<%else%>
	$("#upvote_form_form").css("color", "black");
	$("#downvote_form_form").css("color", "red");
	$("#upvote_count").html('<%=@note.get_upvotes.size%>');
	<%if(@note.get_downvotes.size != 0)%>
		$("#downvote_count").html('<%=-@note.get_downvotes.size%>');	
	<%else%>
		$("#downvote_count").html('0');	
	<%end%>
<%end%>
