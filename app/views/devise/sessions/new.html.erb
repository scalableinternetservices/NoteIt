<body id="signin">
  <div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <section class="login-form">
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <h2>Welcome Back</h2>
          </div>
          <div class="panel-body">    
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
            <%= f.label :email, 'Email Address', class: 'sr-only' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email Address' %>
            <br>
            <%= f.label :password, 'Password', class: 'sr-only' %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password' %>
            <br>
            <% if devise_mapping.rememberable? -%>
            <label>
              <%= f.check_box :remember_me, label: false %>
              Remember me
            </label>
            <br>
            <p align = "right"><%= render "devise/shared/links" %></p>
            <% end %>
            <hr>
            <%= f.button "Log In", class: 'btn btn-lg btn-primary btn-block' %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-4"></div>
  </div>
</body>

